# - Funcao menu
menu() {
    local msg
        msg="‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨\n"
        msg+="‚úåÔ∏èüòÉ Ol√° <b>${message_from_first_name[$id]}</b>, Bem vindo(a)!\n"
        msg+="‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨\n"
        msg+="<b>GERE SEU TESTE DE 1 HORAS GR√ÅTIS</b>\n\n"
        msg+="‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚≠ê <b>VANTAGENS</b> ‚≠ê‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨\n"
        msg+="‚úÖ Teste SEM COMPROMISSO \n"
        msg+="‚úÖ N√£o precisa trocar seu plano\n"
        msg+="‚úÖ N√£o precisa trocar seu chip\n"
        msg+="‚úÖ N√£o tem multa por cancelamento\n"
        msg+="‚úÖ N√£o tem contrato\n"
        msg+="‚úÖ Funciona por aplicativo\n"
        msg+="‚úÖ Use a vontade da forma que preferir\n"
        msg+="‚úÖ √â <b>ILIMITADO</b>\n"
        msg+="‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨\n"
        msg+="<b>üî¥CLARO üü£VIVO üîµTIM üü°OI</b>\n"
        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
        --text "$(echo -e $msg)" \
        --reply_markup "$keyboard1" \
        --parse_mode html
        ShellBot.sendPhoto --chat_id ${message_chat_id[$id]} \
